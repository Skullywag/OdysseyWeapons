<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <ThingDef Name="BaseGun" Abstract="True">
    <category>Item</category>
    <thingClass>ThingWithComps</thingClass>
    <equipmentType>Primary</equipmentType>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <selectable>True</selectable>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <SellPriceFactor>0.5</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <techLevel>Midworld</techLevel>
    <thingCategories>
      <li>WeaponsRanged</li>
    </thingCategories>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompEquippable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>ArtName_WeaponGun</nameMaker>
        <descriptionMaker>ArtDescription_WeaponGun</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
    <smeltProducts>
      <Steel>20</Steel>
    </smeltProducts>
  </ThingDef>

  <ThingDef Name="BaseBullet" Abstract="True">
    <category>Projectile</category>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Projectile</altitudeLayer>
    <thingClass>Bullet</thingClass>
    <label>bullet</label>
    <useHitPoints>False</useHitPoints>
    <neverMultiSelect>True</neverMultiSelect>
    <graphicData>
      <shaderType>Transparent</shaderType>
    </graphicData>
  </ThingDef>
  
  <!-- ======================Zeus========================================-->
  
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Olympus</defName>
    <label>Bullet</label>
    <thingClass>OdysseyWeapons.Projectile_Olympus</thingClass>
    <graphicData>
      <texPath>Projectile/Olympus</texPath>
      <graphicClass>Graphic_Flicker</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>8</damageAmountBase>
      <speed>70</speed>
    </projectile>
    <comps>
      <li Class="OdysseyWeapons.CompProperties_ExtraDamage">
        <compClass>OdysseyWeapons.CompExtraDamage</compClass>
        <damageDef>EMP</damageDef>
        <damageAmount>15</damageAmount>
        <chanceToProc>0.1</chanceToProc>
      </li>
    </comps>
  </ThingDef>

  <!-- ============================================================== -->

  <ThingDef ParentName="BaseGun">
    <defName>Ranged_Zeus</defName>
    <label>Olympus Minigun</label>
    <description>A unique, minigun with an unrivalled ammo capacity.</description>
    <weaponTags>
      <li>AdvancedGun</li>
      <li>Zeus</li>
    </weaponTags>
    <soundInteract>EnergyPickup</soundInteract>
    <graphicData>
      <texPath>Weapons/Ranged/Olympus_Minigun_Zeus</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>2000</MarketValue>
      <AccuracyTouch>0.54</AccuracyTouch>
      <AccuracyShort>0.46</AccuracyShort>
      <AccuracyMedium>0.22</AccuracyMedium>
      <AccuracyLong>0.10</AccuracyLong>
      <RangedWeapon_Cooldown>0.66</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>OdysseyWeapons.Verb_ShootJamReload</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <projectileDef>Bullet_Olympus</projectileDef>
        <forcedMissRadius>1.2</forcedMissRadius>
        <warmupTicks>240</warmupTicks>
        <range>32</range>
        <burstShotCount>30</burstShotCount>
        <ticksBetweenBurstShots>4</ticksBetweenBurstShots>
        <soundCast>Olympus_Shot</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>8</muzzleFlashScale>
      </li>
    </verbs>
    <comps>
      <li Class="OdysseyWeapons.CompProperties_Reloader">
        <compClass>OdysseyWeapons.CompReloader</compClass>
        <roundPerMag>500</roundPerMag>
        <reloadTick>600</reloadTick>
      </li>
    </comps>
  </ThingDef>

</ThingDefs>